@page "/sql-agent"
@using AgentDemos.Agents
@using AgentDemos.Agents.Services
@using AgentDemos.WebUI.Components.Pages.Chat
@using Microsoft.SemanticKernel
@using Microsoft.SemanticKernel.Agents

<PageTitle>SQL Agent</PageTitle>

<h1>SQL Agent</h1>

<Chat Agent="sqlAgent" Title="SQL Query Helper" />

@code {
  [Inject]
  public Kernel Kernel { get; set; }

  private ChatCompletionAgent sqlAgent;

  protected override void OnInitialized()
  {
    sqlAgent = U2UAgentFactory.CreateSqlAgent(Kernel.Clone());
  }
}
